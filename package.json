{
  "name": "viewi-components",
  "displayName": "Viewi Components",
  "description": "VSCode support for Viewi PHP/HTML components with syntax highlighting and autocomplete",
  "version": "1.0.6",
  "icon": "viewi-logo-128.png",
  "publisher": "viewi",
  "repository": "https://github.com/viewi/viewi-vscode.git",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "viewi",
    "php",
    "html",
    "components",
    "autocomplete"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:php"
  ],
  "main": "./client/dist/extension.js",
  "contributes": {
    "grammars": [
      {
        "language": "html",
        "scopeName": "text.html.viewi",
        "fileTypes": [
          "html"
        ],
        "path": "./syntaxes/viewi-html.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.php": "php"
        },
        "injectTo": [
          "text.html.basic"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Viewi Components",
      "properties": {
        "viewi.enableAutocompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable autocompletion for Viewi components"
        },
        "viewi.componentSearchPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "."
          ],
          "description": "Paths to search for Viewi components"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild",
    "compile-ts": "tsc -p ./client && tsc -p ./server",
    "esbuild": "esbuild ./server/src/server.ts --platform=node --bundle --outfile=./server/dist/server.js && esbuild ./client/src/extension.ts --external:vscode --platform=node --bundle --outfile=./client/dist/extension.js",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "0.25.8",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
